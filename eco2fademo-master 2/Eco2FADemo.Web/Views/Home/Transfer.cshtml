@{
    ViewData["Title"] = "Transfer";
}

<div class="row mt-3">
    <div class="offset-sm-3 offset-sm-4 col-sm-6 col-lg-4">
        <div class="alert alert-success" id="successdiv" style="display:none;">
            <h4>Transaction successful!!!</h4>
        </div>
        <div class="card" id="transferdiv">
            <div class="card-header">
                <h4 class="mb-0">Transfer</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info" role="alert">
                    Trasactions above N20,000 will require a 2FA token.
                </div>
                <form>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control form-control-sm" id="username" aria-describedby="usernameHelp">
                        @*<div id="usernameHelp" class="form-text">We'll never share your email with anyone else.</div>*@
                    </div>
                    <div class="mb-3">
                        <label for="debitAccount" class="form-label">Account to Debit</label>
                        <select class="form-select form-select-sm" id="debitAccount">
                            <option selected>Select account</option>
                            <option value="0011223344">Savings - 0011223344</option>
                            <option value="0011223344">Current - 1234567890</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="creditAccount" class="form-label">Destination Account</label>
                        <input type="text" class="form-control form-control-sm" id="creditAccount">
                    </div>
                    <div class="mb-3">
                        <label for="creditBank" class="form-label">Destination Bank</label>
                        <select class="form-select form-select-sm" id="creditBank">
                            <option selected>Select bank</option>
                            <option value="Ecobank">Ecobank</option>
                            <option value="First Bank">First Bank</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Amount</label>
                        <input type="number" class="form-control form-control-sm" step=".01" id="amount">
                    </div>

                    <div class="mb-3">
                        <label for="pin" class="form-label">Pin</label>
                        <input type="password" maxlength="4" class="form-control form-control-sm" id="pin">
                    </div>
                   
                    <div class="mb-3" style="display:none;" id="tokendiv">
                         <p>2FA toke is required for this trasaction</p>
                        <label for="token" class="form-label">2FA Token</label>
                        <input type="text" maxlength="10" class="form-control form-control-sm" id="token">
                    </div>
                </form>
            </div>
            <div class="card-footer d-flex flex-row justify-content-end">
                <button type="button" class="btn btn-outline-secondary btn-sm">Cancel</button>
                <button type="button" class="btn btn-success btn-sm ms-2" id="completeBtn">Complete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/transfer.js" asp-append-version="true"></script>
}