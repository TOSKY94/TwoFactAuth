@{
    ViewData["Title"] = "Setup 2FA";
}

<div class="row">
    <div class="offset-sm-3 offset-sm-4 col-sm-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Setup 2FA</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="username" class="form-label">Enter your username</label>
                    <input type="text" class="form-control form-control-sm" id="username" />
                    <button type="button" id="fetchBtn" class="btn btn-outline-primary btn-sm mt-2">Get 2FA setup code</button>
                </div>


                <div id="qrdiv" style="display:none;">
                    <hr />
                    <p>Scan the below qr code with any authenticator app</p>
                    <img id="qrimg" src="~/images/hello.png" class="img-fluid d-block mx-auto" style="max-width:300px;" />

                    <p class="mt-3">Having issues scanning? You can enter the below code maually</p>
                    <h6>Code: <span style="font-family:Consolas;" class="fw-bold" id="codesp">UKGJKVUTFYCYCY</span></h6>
                </div>
            </div>
            <div class="card-footer d-flex flex-row justify-content-end">
                <button type="button" class="btn btn-primary btn-sm ms-2" id="transfer">Go to transfer</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/setup2fa.js" asp-append-version="true"></script>
}